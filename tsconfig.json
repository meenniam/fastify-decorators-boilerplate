{
    "compilerOptions": {
        "baseUrl": "src/",
        "outDir": "dist/",
        "rootDir": "src/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonJS",
        "moduleResolution": "node",
        "declaration": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strict": true,
    },
    "include": [
        "./src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist/**/*"
    ]
}